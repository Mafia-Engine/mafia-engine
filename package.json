{
	"scripts": {
		"start": "node ./build/src/index.js",
		"build": "tsc",
		"dev": "nodemon src/index.ts",
		"migrate": "ts-node ./src/migrate.ts",
		"lint": "eslint . --ext .ts",
		"typecheck": "tsc --noEmit",
		"fullcheck": "npm run lint && npm run typecheck"
	},
	"dependencies": {
		"axios": "^1.7.7",
		"discord.js": "^14.11.0",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.33.0",
		"pg": "^8.12.0",
		"zod": "^3.22.1"
	},
	"devDependencies": {
		"@types/node": "^20.4.2",
		"@types/pg": "^8.11.6",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"drizzle-kit": "^0.24.0",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.1.0",
		"ts-node": "^10.9.1"
	},
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "ts-node src/index.ts",
		"ext": "ts, js"
	}
}
